<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/searchName" android:hint="Search Name" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/searchLocation" android:hint="Search Location" android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/searchDate" android:hint="Search Date" android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnDoSearch"
        android:text="Search"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/searchListView"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
